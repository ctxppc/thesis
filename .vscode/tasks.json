{
	// Tasks definitions for VS Code; see also https://go.microsoft.com/fwlink/?LinkId=733558
	"version": "2.0.0",
	"tasks": [
		{
			"label": "swift-build",
			"type": "shell",
			"command": "swift build",
			"options": {
				"cwd": "${workspaceFolder}/Glyco"
			}
		},
		{
			"label": "swift-build-tests",
			"type": "process",
			"command": "swift",
			"options": {
				"cwd": "${workspaceFolder}/Glyco"
			},
			"group": "build",
			"args": ["build", "--build-tests"]
		}
	]
}
